---
import {type PageMeta, seoMeta} from '@stephenchenorg/astro/page'
import { getLocale } from 'i18n:astro'
import Layout from '@/layouts/Layout.astro'
import SectionTitle from '@/components/ui/SectionTitle.astro'
import { createNestedT } from '@/utils/i18n'
import { getCanonicalUrl, getSeoConfig } from '@/utils/seoConfig'

const t = await createNestedT()
const currentLocale = getLocale()
const locale = currentLocale === 'en' ? 'en' : 'zh_TW'

const defaultSeo = getSeoConfig('home', locale)

const meta = {
  ...seoMeta({
    title: t('sitemap.title'),
    seo_title: t('sitemap.title'),
    seo_description: t('sitemap.description'),
    seo_keyword: defaultSeo.seo_keyword,
    og_title: t('sitemap.title'),
    og_description: t('sitemap.description'),
    og_image: defaultSeo.og_image,
  }),
  canonical: getCanonicalUrl('sitemap', locale),
} as PageMeta

// 定義網站地圖結構
const sitemapSections = [
  {
    title: t('sitemap.mainPages'),
    links: [
      { label: t('nav.home'), url: '/', icon: 'home' },
      { label: t('nav.about'), url: '/about', icon: 'info' },
      { label: t('nav.services'), url: '/services', icon: 'services' },
      { label: t('nav.team'), url: '/team', icon: 'team' },
      { label: t('nav.news'), url: '/news', icon: 'news' },
      { label: t('nav.business_partnership'), url: '/business-partnership', icon: 'partnership' },
    ]
  },
  {
    title: t('sitemap.otherPages'),
    links: [
      { label: t('nav.faq'), url: '/faq', icon: 'faq' },
      { label: t('nav.joinUs'), url: '/joinUs', icon: 'join' },
      { label: t('footer.privacy-policy'), url: '/privacy', icon: 'privacy' },
      { label: t('footer.terms-of-service'), url: '/terms', icon: 'terms' },
    ]
  },
]

// SVG icons mapping
const icons = {
  home: 'M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6',
  info: 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  services: 'M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10',
  team: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z',
  news: 'M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z',
  partnership: 'M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
  faq: 'M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  join: 'M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z',
  privacy: 'M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z',
  terms: 'M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z',
}
---

<Layout meta={meta}>
  <!-- Hero Section -->
  <section class="relative aspect-[1920/600] overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-primary-500/20 to-primary-700/20"></div>
    <div class="absolute inset-0 flex items-center justify-center">
      <div class="text-center px-4">
        <h1
          class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold mb-4"
          style="color: var(--theme-text);"
        >
          {t('sitemap.title')}
        </h1>
        <p
          class="text-lg sm:text-xl md:text-2xl opacity-80"
          style="color: var(--theme-text);"
        >
          {t('sitemap.description')}
        </p>
      </div>
    </div>
  </section>

  <main class="section-container-detail" style="background: var(--theme-bg);">
    <SectionTitle
      title={t('sitemap.sectionTitle')}
      subtitle={t('sitemap.sectionSubtitle')}
    />

    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pb-20">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {sitemapSections.map(section => (
          <div
            class="p-6 rounded-2xl shadow-lg"
            style="background: var(--theme-card-bg); border: 1px solid var(--theme-border);"
          >
            <h2
              class="text-2xl font-bold mb-6 pb-4"
              style="border-bottom: 2px solid var(--color-primary-500); color: var(--theme-text);"
            >
              {section.title}
            </h2>
            <ul class="space-y-3">
              {section.links.map(link => (
                <li>
                  <a
                    href={link.url}
                    class="group flex items-center gap-3 p-3 rounded-lg transition-all duration-300 hover:shadow-md hover:scale-105"
                    style="background: var(--theme-bg); border: 1px solid transparent; hover:border-color: var(--color-primary-500);"
                  >
                    <svg
                      class="w-5 h-5 flex-shrink-0 transition-transform duration-300 group-hover:scale-110"
                      style="color: var(--color-primary-500);"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d={icons[link.icon]}
                      />
                    </svg>
                    <span
                      class="font-medium group-hover:translate-x-1 transition-transform duration-300"
                      style="color: var(--theme-text);"
                    >
                      {link.label}
                    </span>
                    <svg
                      class="w-4 h-4 ml-auto opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                      style="color: var(--color-primary-500);"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5l7 7-7 7"
                      />
                    </svg>
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>

      <!-- Search Box -->
      <div class="mt-12 max-w-2xl mx-auto">
        <div
          class="p-6 rounded-2xl shadow-lg text-center"
          style="background: var(--theme-card-bg); border: 1px solid var(--theme-border);"
        >
          <svg
            class="w-12 h-12 mx-auto mb-4"
            style="color: var(--color-primary-500);"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
            />
          </svg>
          <h3
            class="text-xl font-semibold mb-2"
            style="color: var(--theme-text);"
          >
            {currentLocale === 'en' ? 'Need Help?' : '需要協助？'}
          </h3>
          <p
            class="mb-4 opacity-80"
            style="color: var(--theme-text);"
          >
            {currentLocale === 'en' ? "Can't find what you're looking for? Contact us for assistance." : '找不到您要的內容？聯繫我們尋求協助。'}
          </p>
          <a
            href="/faq"
            class="inline-flex items-center gap-2 px-6 py-3 rounded-full font-semibold text-white dark:text-black transition-all duration-300 hover:shadow-xl hover:scale-105"
            style="background: var(--color-primary-500);"
          >
            <span>{currentLocale === 'en' ? 'Visit FAQ' : '前往常見問題'}</span>
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M14 5l7 7m0 0l-7 7m7-7H3"
              />
            </svg>
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
