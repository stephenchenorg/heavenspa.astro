---
import { seoMeta } from '@stephenchenorg/astro/page'
import { getServiceDetail } from '@/api/service'
import Layout from '@/layouts/Layout.astro'
import { createNestedT } from '@/utils/i18n'

const t = await createNestedT()

// 取得路由參數
const { category_id, id } = Astro.params

// 取得服務詳細資料
const serviceData = await getServiceDetail(parseInt(id!, 10))
const service = serviceData.service

const meta = seoMeta({
  title: `${service.title} - ${service.category.title} - Heaven Spa`,
  description: service.content_1 || `了解 ${service.title} 服務的詳細內容，享受專業的美容護理體驗。`,
})

---

<Layout meta={meta}>
  <main class="section-container">

    <!-- 服務橫幅 -->
    <section class="relative w-full h-64 md:h-80 lg:h-96 mb-8 overflow-hidden">
      <!-- 背景圖片 -->
      <div
        class="absolute inset-0 bg-cover bg-center"
        style={`background-image: url('${service.cover || 'https://imagefaker.access.mx.com/1920x1080/282828/eae0d0/?retina=1'}')`}
      >
      </div>
      <!-- 漸層遮罩 -->
      <div class="absolute inset-0 bg-black/50"></div>
      <!-- 文字內容 -->
      <div class="relative z-10 flex items-center justify-center h-full text-center text-white px-4">
        <div class="max-w-4xl">
          <nav class="mb-4">
            <ol class="flex items-center space-x-2 text-sm text-white/70">
              <li><a href="/services" class="hover:text-white transition-colors">服務項目</a></li>
              <li>/</li>
              <li><a href={`/services/${category_id}/items`} class="hover:text-white transition-colors">{service.category.title}</a></li>
              <li>/</li>
              <li class="text-white">{service.title}</li>
            </ol>
          </nav>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4">{service.title}</h1>
          <p class="text-lg md:text-xl text-white/80">{service.category.title}</p>
        </div>
      </div>
    </section>

    <!-- 服務內容 -->
    <div class="max-w-7xl mx-auto px-4 py-8 ">
      <!-- 三列佈局 -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

        <!-- 左側：一般資訊 -->
        <div class="lg:col-span-1 space-y-8">

          <!-- 服務規格 -->
          {service.specifications && service.specifications.length > 0 && (
              <h2 class="text-xl font-bold mb-3 text-neutral-800 dark:text-neutral-600">服務方案</h2>
              <div class="space-y-4">
                {service.specifications.map((spec) => (
                  <div class="p-4 transition-colors">
                    <h3 class="text-base font-semibold mb-3 text-neutral-800">{spec.title}</h3>
                    <div class="grid grid-cols-1 gap-2 text-sm">
                      <div class="flex justify-between items-center py-1">
                        <span class="text-neutral-800 dark:text-neutral-600">價格</span>
                        <span class="font-medium text-neutral-800 dark:text-neutral-600 ">NT$ {spec.listing_price?.toLocaleString()}</span>
                      </div>
                      <div class="flex justify-between items-center py-1">
                        <span class="text-neutral-800 dark:text-neutral-600">時間</span>
                        <span class="font-medium text-neutral-800 dark:text-neutral-600">{spec.minutes} 分鐘</span>
                      </div>
                      <div class="flex justify-between items-center py-1">
                        <span class="text-neutral-800 dark:text-neutral-600">堂數</span>
                        <span class="font-medium text-neutral-800 dark:text-neutral-600">{spec.hall_count || '-'}</span>
                      </div>
                    </div>
                    {spec.description && (
                      <>
                        <div class="my-3 h-px bg-neutral-200 dark:bg-neutral-300"></div>
                        <p class="text-sm text-neutral-600 dark:text-neutral-600 leading-relaxed">{spec.description}</p>
                      </>
                    )}
                  </div>
                ))}
              </div>
          )}

          <div class="h-px bg-neutral-200 dark:bg-neutral-300"></div>

          <!-- 服務詳細內容 -->
          <div class="space-y-6">

              {service.content_1 && (
                <div>
                  <h3 class="text-base font-semibold mb-3 text-neutral-800 dark:text-neutral-600 flex items-center">
                    詳細介紹 / 提醒說明
                  </h3>
                  <div class="text-sm text-neutral-600 dark:text-neutral-600 leading-relaxed whitespace-pre-line p-4">
                    {service.content_1}
                  </div>
                </div>
              )}

              {service.content_2 && (
                <>
                  <div class="h-px bg-neutral-200 dark:bg-neutral-300"></div>
                  <div>
                    <h3 class="text-base font-semibold mb-3 text-neutral-800 dark:text-neutral-600 flex items-center">
                      適合對象 / 膚況
                    </h3>
                    <div class="text-sm text-neutral-600 dark:text-neutral-600 leading-relaxed whitespace-pre-line p-4">
                      {service.content_2}
                    </div>
                  </div>
                </>
              )}

              {service.content_3 && (
                <>
                  <div class="h-px bg-neutral-200 dark:bg-neutral-300"></div>
                  <div>
                    <h3 class="text-base font-semibold mb-3 text-neutral-800 dark:text-neutral-600 flex items-center">
                      課程亮點
                    </h3>
                    <div class="text-sm text-neutral-600 dark:text-neutral-600 leading-relaxed whitespace-pre-line p-4">
                      {service.content_3}
                    </div>
                  </div>
                </>
              )}

              {service.content_4 && (
                <>
                  <div class="h-px bg-neutral-200 dark:bg-neutral-300"></div>
                  <div>
                    <h3 class="text-base font-semibold mb-3 text-neutral-800 dark:text-neutral-600 flex items-center">
                      課程內容
                    </h3>
                    <div class="text-sm text-neutral-600 dark:text-neutral-600 leading-relaxed whitespace-pre-line p-4">
                      {service.content_4}
                    </div>
                  </div>
                </>
              )}
            </div>
        </div>

        <!-- 右側：圖片直條式顯示 -->
        {service.images && service.images.length > 0 && (
          <div class="lg:col-span-2 space-y-4">
            <div class="space-y-4">
              {service.images.map((imageItem, index) => (
                <div class="aspect-[4/3] overflow-hidden shadow-sm hover:shadow-md transition-shadow">
                  <img
                    src={imageItem.image.desktop}
                    alt={`${service.title} 圖片 ${index + 1}`}
                    class="w-full h-full object-cover  transition-transform duration-300"
                    loading="lazy"
                  />
                </div>
              ))}
            </div>
          </div>
        )}
      </div>
    </div>

  </main>
</Layout>

<style>
  .prose {
    max-width: none;
  }
  .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
    color: #1f2937;
    font-weight: 600;
  }
  .prose p {
    margin-bottom: 1rem;
    line-height: 1.75;
  }

</style>

