---
import { seoMeta } from '@stephenchenorg/astro/page'
import Layout from '../layouts/Layout.astro'
import Navigation from '../components/Navigation.astro'
import PageHero from '../components/PageHero.astro'
import Marquee from '../components/Marquee.astro'
import CourseCarousel from '../components/CourseCarousel.astro'

const meta = seoMeta({
  title: 'Heaven Spa - 專業課程介紹',
  description: '提供按摩、除毛、水飛梭、教育等專業課程，打造頂級美容技能'
})

// 課程資料
const courses = [
  {
    id: 'massage',
    title: '專業按摩課程',
    subtitle: 'Professional Massage',
    description: '從基礎手法到進階技巧，全面掌握專業按摩療法',
    image: '/api/placeholder/600/400',
    features: ['瑞典式按摩', '深層組織按摩', '熱石療法', '芳香療法'],
    duration: '3個月',
    level: '初級到高級',
    gradient: 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)'
  },
  {
    id: 'hair-removal',
    title: '專業除毛課程',
    subtitle: 'Hair Removal Techniques',
    description: '學習安全有效的除毛技術，包含雷射與傳統除毛方法',
    image: '/api/placeholder/600/400',
    features: ['雷射除毛', '蜜蠟除毛', '電針除毛', '安全防護'],
    duration: '2個月',
    level: '中級',
    gradient: 'linear-gradient(135deg, #f093fb 0%, #f5576c 100%)'
  },
  {
    id: 'hydrafacial',
    title: '水飛梭課程',
    subtitle: 'HydraFacial Training',
    description: '最新水飛梭技術培訓，深層清潔與肌膚護理',
    image: '/api/placeholder/600/400',
    features: ['設備操作', '肌膚分析', '個人化護理', '術後保養'],
    duration: '1.5個月',
    level: '進階',
    gradient: 'linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)'
  },
  {
    id: 'education',
    title: '美容教育課程',
    subtitle: 'Beauty Education',
    description: '美容行業知識與經營管理，培養全方位美容專家',
    image: '/api/placeholder/600/400',
    features: ['理論基礎', '實務操作', '客戶服務', '經營管理'],
    duration: '4個月',
    level: '全階段',
    gradient: 'linear-gradient(135deg, #fa709a 0%, #fee140 100%)'
  }
]

// 跑馬燈文字
const marqueeTexts = [
  '專業按摩療法培訓',
  '安全除毛技術教學',
  '水飛梭操作認證',
  '美容教育專業課程',
  '頂級技能培訓中心'
]
---

<Layout meta={meta}>
  <!-- 導航列 -->
  <Navigation currentPage="courses" />

  <!-- 頁面標題區塊 -->
  <PageHero title="專業課程介紹" subtitle="Professional Training Programs">
    <!-- 跑馬燈 -->
    <Marquee texts={marqueeTexts} />
  </PageHero>

  <!-- 課程輪播區塊 -->
  <CourseCarousel courses={courses} />

  <!-- 額外資訊區塊 -->
  <section class="course-info">
    <div class="info-container">
      <div class="info-grid">
        <div class="info-item">
          <div class="info-icon">🎓</div>
          <h3>專業認證</h3>
          <p>完成課程後可獲得專業認證證書，提升職業競爭力</p>
        </div>
        <div class="info-item">
          <div class="info-icon">👩‍🏫</div>
          <h3>資深講師</h3>
          <p>由業界資深專家親自授課，分享實務經驗與技巧</p>
        </div>
        <div class="info-item">
          <div class="info-icon">🏢</div>
          <h3>就業輔導</h3>
          <p>提供就業媒合服務，協助學員找到理想工作機會</p>
        </div>
        <div class="info-item">
          <div class="info-icon">📚</div>
          <h3>持續學習</h3>
          <p>終身學習支持，持續提供最新技術與知識更新</p>
        </div>
      </div>
    </div>
  </section>

  <!-- 聯絡我們區塊 -->
  <section class="contact-cta">
    <div class="cta-container">
      <h2>準備開始您的美容職業生涯？</h2>
      <p>立即聯絡我們，了解更多課程詳情和報名資訊</p>
      <div class="cta-buttons">
        <a href="/contact" class="cta-btn primary">立即諮詢</a>
        <a href="tel:+886-2-1234-5678" class="cta-btn secondary">電話諮詢</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* 全域樣式重置 */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    line-height: 1.6;
    color: #2d3436;
  }

  /* 額外資訊區塊 */
  .course-info {
    padding: 6rem 2rem;
    background: white;
  }

  .info-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
  }

  .info-item {
    text-align: center;
    padding: 2rem;
    border-radius: 20px;
    background: #f8f9fa;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .info-item:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .info-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .info-item h3 {
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #2d3436;
  }

  .info-item p {
    color: #636e72;
    line-height: 1.6;
  }

  /* 聯絡我們區塊 */
  .contact-cta {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 6rem 2rem;
    text-align: center;
    color: white;
  }

  .cta-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .contact-cta h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .contact-cta p {
    font-size: 1.2rem;
    margin-bottom: 3rem;
    opacity: 0.9;
  }

  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-btn {
    padding: 1rem 2.5rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .cta-btn.primary {
    background: white;
    color: #667eea;
  }

  .cta-btn.primary:hover {
    background: #f8f9fa;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(255, 255, 255, 0.3);
  }

  .cta-btn.secondary {
    background: transparent;
    color: white;
    border: 2px solid white;
  }

  .cta-btn.secondary:hover {
    background: white;
    color: #667eea;
    transform: translateY(-2px);
  }

  /* 響應式設計 */
  @media (max-width: 768px) {
    .course-info {
      padding: 4rem 1rem;
    }

    .info-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .contact-cta {
      padding: 4rem 1rem;
    }

    .contact-cta h2 {
      font-size: 2rem;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .cta-btn {
      width: 100%;
      max-width: 300px;
      justify-content: center;
    }
  }
</style>
