---
import { seoMeta } from '@stephenchenorg/astro/page'
import Layout from '@/layouts/Layout.astro'
import SectionTitle from "../../components/ui/SectionTitle.astro"
import TeamCard from "../../components/ui/TeamCard.astro"
import { getAllTeams } from '@/api/teams'
import type { TeamMember } from '@/types'

// 獲取所有團隊成員
let teamMembers: TeamMember[] = []

try {
  teamMembers = await getAllTeams()
  console.log("teamMembers >> ", teamMembers.length)
} catch (error) {
  console.error('Failed to fetch team members:', error)
}

const meta = seoMeta({
  title: '服務團隊 - Heaven Spa',
})
---

<Layout meta={meta}>
  <main class="section-container pt-32 min-h-screen bg-[var(--theme-bg,#ffffff)] text-[var(--theme-text,#1f2937)]">
    <!-- 標題區 -->
    <SectionTitle title="服務團隊" subtitle="OUR TEAM" />

    <!-- 團隊成員網格 -->
    <div class="max-w-7xl px-4 sm:px-6 lg:px-8">
      {teamMembers && teamMembers.length > 0 ? (
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {teamMembers.map((member) => (
            <TeamCard
              member={member}
              uniqueId={`team-${member.id}`}
            />
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <div class="max-w-md mx-auto">
            <h3 class="text-lg font-medium mb-2 text-[var(--theme-text,#1f2937)]">
              暫無資料
            </h3>
            <p class="text-[var(--theme-text-secondary,#6b7280)]">
              目前沒有團隊成員資訊
            </p>
          </div>
        </div>
      )}
    </div>
  </main>
</Layout>