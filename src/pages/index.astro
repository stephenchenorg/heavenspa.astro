---
import { seoMeta } from '@stephenchenorg/astro/page'
import Layout from '@/layouts/Layout.astro'
import Header from '@/layouts/partials/Header.astro'
import Footer from '@/layouts/partials/Footer.astro'
import MemberBenefits from '@/components/MemberBenefits.astro'
import CourseCarousel from '@/components/CourseCarousel.vue'

const meta = seoMeta({
  title: 'Heaven Spa - 極致放鬆體驗',
})
---

<Layout meta={meta}>
  <Header />

  <!-- 內容容器 -->
  <div class="content-container">

  <!-- Hero Banner -->
  <section class="scroll-section hero-banner" id="home" data-section="home">

    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title">
          <span class="title-line">EMBRACE</span>
          <span class="title-line">YOURSELF</span>
        </h1>
        <p class="hero-subtitle">Wellness</p>
      </div>
    </div>

    <!-- 旋轉圓圈元素 -->
    <div class="rotating-circle">
      <div class="circle-text">
        <span>SCROLL TO EXPLORE • SCROLL TO EXPLORE • </span>
      </div>
      <div class="circle-arrow">↓</div>
    </div>

    <!-- 側邊文字 -->
    <div class="side-text">
      <span>& SPA</span>
    </div>

    <div class="hero-bg">
      <div class="hero-image"></div>
    </div>
  </section>

  <!-- Intro Section -->
  <section class="scroll-section intro-section" id="intro" data-section="intro">
    <div class="intro-container">
      <div class="intro-left">
        <div class="intro-text-stack">
          <h2 class="intro-title">intro</h2>
          <h2 class="intro-title">intro</h2>
          <h2 class="intro-title">intro</h2>
        </div>
      </div>
      <div class="intro-right">
        <h3 class="intro-heading">致力成為世界一流的製造服務整合者與持續成長的永續經營企業</h3>
        <p class="intro-description">
          聚焦擁有創新管理思維、專業素養及技術能量、進件客戶佈局、
          創新設計研發、全球資訊整合，市場細緻分析等多項能力，從聚
          集成為台灣最式界領航者，亦展美、日、歐、台各大服飾品牌與
          零售業者主要合作夥伴，在全球皮革產業價值鏈中取得關鍵地
          位。
        </p>
      </div>
      <div class="intro-circle-decoration"></div>
    </div>
  </section>

  <!-- Course Section -->
  <section class="scroll-section course-section-container" id="courses" data-section="courses">
    <CourseCarousel client:load />
  </section>

  <!-- Member Benefits Section -->
  <section class="scroll-section member-benefits-section" id="benefits" data-section="benefits">
    <MemberBenefits />
  </section>

  </div> <!-- 結束內容容器 -->

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html {
      scroll-behavior: smooth;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      line-height: 1.6;
      overflow-x: hidden;
    }

    /* 內容容器 */
    .content-container {
      position: relative;
    }

    .scroll-section {
      position: relative;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    /* Hero Banner 樣式 */
    .hero-banner {
      position: absolute;
      background: linear-gradient(
        45deg,
        #c48b6e 0%,
        #d4a574 50%,
        #c48b6e 100%
      );
      overflow: hidden;
      width: 100%;
      top: 0;
    }

    .hero-bg {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 1;
    }

    .hero-image {
      width: 100%;
      height: 100%;
      background: url('https://demo.themetorium.net/html/jesper/assets/img/portfolio/1920/portfolio-4.jpg') center/cover;
      mix-blend-mode: multiply;
      opacity: 0.8;
    }

    .hero-content {
      position: relative;
      z-index: 10;
      text-align: center;
    }

    .hero-title {
      font-size: clamp(4rem, 12vw, 9rem);
      font-weight: 900;
      line-height: 0.85;
      color: white;
      text-transform: uppercase;
      letter-spacing: -0.02em;
      margin-bottom: 2rem;
    }

    .title-line {
      display: block;
      animation: fadeInUp 1s ease 0.5s both;
    }

    .title-line:nth-child(2) {
      animation-delay: 0.7s;
    }

    .hero-subtitle {
      font-size: 1.2rem;
      color: white;
      font-weight: 300;
      letter-spacing: 3px;
      text-transform: uppercase;
      animation: fadeInUp 1s ease 0.9s both;
    }

    /* 旋轉圓圈樣式 */
    .rotating-circle {
      position: absolute;
      bottom: 5rem;
      right: 5rem;
      width: 120px;
      height: 120px;
      z-index: 10;
      opacity: 1;
      transition: opacity 0.5s ease;
    }

    .rotating-circle.hidden {
      opacity: 0;
      pointer-events: none;
    }

    .circle-text {
      position: absolute;
      width: 100%;
      height: 100%;
      border-radius: 50%;
      border: 1px solid rgba(255, 255, 255, 0.3);
      animation: rotate 20s linear infinite;
    }

    .circle-text span {
      position: absolute;
      left: 50%;
      top: 10px;
      font-size: 10px;
      color: white;
      letter-spacing: 2px;
      font-weight: 400;
      transform-origin: 0 50px;
      white-space: nowrap;
    }

    .circle-arrow {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: white;
      font-size: 1.5rem;
      animation: bounce 2s ease-in-out infinite;
    }

    /* 側邊文字 */
    .side-text {
      position: absolute;
      left: 3rem;
      top: 50%;
      transform: translateY(-50%) rotate(-90deg);
      z-index: 10;
    }

    .side-text span {
      color: white;
      font-size: 1rem;
      letter-spacing: 3px;
      font-weight: 300;
      text-transform: uppercase;
    }

    /* 其他區塊樣式 */
    .intro-section {
      background: linear-gradient(135deg, #e17055 0%, #fdcb6e 30%, #e17055 60%, #fd79a8 100%);
      position: relative;
      overflow: hidden;
      margin-top: 100vh;
      z-index: 1;
    }

    .intro-container {
      display: flex;
      align-items: center;
      justify-content: space-between;
      height: 100vh;
      padding: 0 6rem;
      position: relative;
      z-index: 2;
    }

    .intro-left {
      flex: 1;
      display: flex;
      align-items: center;
    }

    .intro-text-stack {
      display: flex;
      flex-direction: column;
      gap: -2rem;
    }

    .intro-title {
      font-size: 12rem;
      font-weight: 100;
      color: white;
      text-transform: lowercase;
      line-height: 0.8;
      letter-spacing: -0.05em;
      opacity: 0.9;
      font-family: 'Inter', sans-serif;
    }

    .intro-title:nth-child(2) {
      margin-left: 2rem;
      opacity: 0.6;
    }

    .intro-title:nth-child(3) {
      margin-left: 4rem;
      opacity: 0.3;
    }

    .intro-right {
      flex: 1;
      max-width: 500px;
      padding-left: 4rem;
    }

    .intro-heading {
      font-size: 2rem;
      font-weight: 700;
      color: #2d3436;
      line-height: 1.3;
      margin-bottom: 2rem;
      letter-spacing: -0.02em;
    }

    .intro-description {
      font-size: 1.1rem;
      color: #636e72;
      line-height: 1.8;
      font-weight: 400;
      letter-spacing: 0.5px;
    }

    .intro-circle-decoration {
      position: absolute;
      top: -20%;
      right: -15%;
      width: 800px;
      height: 800px;
      border-radius: 50%;
      background: linear-gradient(45deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
      z-index: 1;
      animation: float 6s ease-in-out infinite;
    }

    .about-section,
    .services-section,
    .contact-section {
      text-align: center;
      padding: 2rem;
      background: white;
    }


    .course-section-container {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1500;
      height: 100vh;
    }

    .member-benefits-section {
      background: transparent;
      padding: 0;
      margin-top: 100vh;
      position: relative;
      z-index: 1;
    }

    .member-benefits-section .member-benefits {
      padding: 0;
      min-height: 100vh;
    }

    .footer-section {
      background: transparent;
      padding: 0;
      height: auto;
      min-height: 100vh;
    }

    .footer-section .main-footer {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .section-content {
      max-width: 1200px;
      margin: 0 auto;
    }

    .section-title {
      font-size: 3rem;
      font-weight: 300;
      margin-bottom: 2rem;
      color: #333;
    }

    .section-text {
      font-size: 1.1rem;
      color: #666;
      line-height: 1.8;
      margin-bottom: 3rem;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }

    /* 動畫效果 */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(60px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes rotate {
      from {
        transform: rotate(0deg);
      }
      to {
        transform: rotate(360deg);
      }
    }

    @keyframes bounce {
      0%, 20%, 50%, 80%, 100% {
        transform: translate(-50%, -50%) translateY(0);
      }
      40% {
        transform: translate(-50%, -50%) translateY(-10px);
      }
      60% {
        transform: translate(-50%, -50%) translateY(-5px);
      }
    }

    @keyframes float {
      0%, 100% {
        transform: translateY(0px) rotate(0deg);
      }
      50% {
        transform: translateY(-20px) rotate(5deg);
      }
    }

    /* 響應式設計 */
    @media (max-width: 768px) {
      .hero-title {
        font-size: 4rem;
      }

      .rotating-circle {
        bottom: 2rem;
        right: 2rem;
        width: 80px;
        height: 80px;
      }

      .circle-text span {
        font-size: 8px;
        transform-origin: 0 35px;
      }

      .side-text {
        left: 1rem;
      }

      .intro-container {
        flex-direction: column;
        padding: 2rem;
        text-align: center;
      }

      .intro-title {
        font-size: 6rem;
      }

      .intro-right {
        padding-left: 0;
        padding-top: 2rem;
        max-width: 100%;
      }

      .intro-heading {
        font-size: 1.5rem;
      }

      .intro-circle-decoration {
        width: 400px;
        height: 400px;
        top: -10%;
        right: -25%;
      }

    }
  </style>

  <script>
    // 等待 DOM 載入完成
    document.addEventListener('DOMContentLoaded', () => {

      // 旋轉圓圈文字效果
      const circleText = document.querySelector('.circle-text span') as HTMLElement;
      if (circleText) {
        const text = circleText.textContent || '';
        circleText.innerHTML = '';

        for (let i = 0; i < text.length; i++) {
          const char = document.createElement('span');
          char.textContent = text[i];
          char.style.transform = `rotate(${i * (360 / text.length)}deg)`;
          char.style.position = 'absolute';
          char.style.left = '50%';
          char.style.transformOrigin = '0 50px';
          circleText.appendChild(char);
        }
      }

      // 平滑滾動效果
      const scrollLinks = document.querySelectorAll('a[href^="#"]') as NodeListOf<HTMLAnchorElement>;
      scrollLinks.forEach(anchor => {
        anchor.addEventListener('click', function (e: Event) {
          e.preventDefault();
          const href = (this as HTMLAnchorElement).getAttribute('href');
          const target = href ? document.querySelector(href) : null;
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });

      // 視差滾動效果
      window.addEventListener('scroll', () => {
        const scrolled = window.pageYOffset;
        const heroImage = document.querySelector('.hero-image') as HTMLElement;
        if (heroImage) {
          heroImage.style.transform = `translateY(${scrolled * 0.5}px)`;
        }
      });
    });
  </script>
</Layout>
