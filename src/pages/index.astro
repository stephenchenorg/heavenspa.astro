  <script>
    // 等待 DOM 載入完成
    document.addEventListener('DOMContentLoaded', () => {
      let currentSection = 0;
      const sections = document.querySelectorAll('.scroll-section') as NodeListOf<HTMLElement>;
      const totalSections = sections.length;
      let isScrolling = false;

      // 初始化第一個區塊
      if (sections.length > 0) {
        sections[0].classList.add('active');
      }

      // 更新進度條
      function updateProgressBar() {
        const progress = (currentSection / (totalSections - 1)) * 100;
        const progressBar = document.querySelector('.progress-bar') as HTMLElement;
        if (progressBar) {
          progressBar.style.width = `${progress}%`;
        }
      }

      // 更新導航狀態
      function updateNavigation() {
        const navItems = document.querySelectorAll('.nav-item') as NodeListOf<HTMLElement>;
        navItems.forEach((item, index) => {
          item.classList.remove('active');
          if (index === currentSection) {
            item.classList.add('active');
          }
        });
      }

      // 顯示指定區塊
      function showSection(index: number) {
        sections.forEach((section, i) => {
          section.classList.remove('active', 'exit');
          if (i === index) {
            section.classList.add('active');
          } else if (i < index) {
            section.classList.add('exit');
          }
        });
        updateProgressBar();
        updateNavigation();
      }

      // 滾動事件處理
      function handleScroll() {
        if (isScrolling) return;

        const scrollTop = window.pageYOffset;
        const windowHeight = window.innerHeight;
        const newSection = Math.floor(scrollTop / windowHeight);

        // 控制旋轉圓圈在footer區域的顯示
        const rotatingCircle = document.querySelector('.rotating-circle') as HTMLElement;
        if (rotatingCircle) {
          // 當到達最後一個section (footer) 時隱藏
          if (newSection >= totalSections - 1) {
            rotatingCircle.classList.add('hidden');
          } else {
            rotatingCircle.classList.remove('hidden');
          }
        }

        if (newSection !== currentSection && newSection >= 0 && newSection < totalSections) {
          currentSection = newSection;
          showSection(currentSection);
        }
      }

      // 防抖滾動 - 縮短延遲時間提高響應性
      let scrollTimeout: number;
      window.addEventListener('scroll', () => {
        clearTimeout(scrollTimeout);
        scrollTimeout = window.setTimeout(handleScroll, 5);
      });

      // 導航項目點擊效果
      const navItems = document.querySelectorAll('.nav-item') as NodeListOf<HTMLElement>;
      navItems.forEach((item, index) => {
        item.addEventListener('click', (e: Event) => {
          e.preventDefault();
          if (isScrolling) return;

          const target = e.target as HTMLElement;
          if (target) {
            navItems.forEach(nav => nav.classList.remove('active'));
            target.classList.add('active');

            // 滾動到對應區塊
            currentSection = index;
            isScrolling = true;
            window.scrollTo({
              top: index * window.innerHeight,
              behavior: 'smooth'
            });
            showSection(currentSection);
            setTimeout(() => { isScrolling = false; }, 800);
          }
        });
      });

      // 課程輪播功能
      let currentCourseIndex = 0;
      const courseItems = document.querySelectorAll('.course-carousel-item') as NodeListOf<HTMLElement>;
      const prevBtn = document.querySelector('.prev-btn') as HTMLButtonElement;
      const nextBtn = document.querySelector('.next-btn') as HTMLButtonElement;
      const totalCourses = courseItems.length;

      function updateCourseCarousel() {
        courseItems.forEach((item, index) => {
          item.classList.toggle('active', index === currentCourseIndex);
        });
      }

      function nextCourse() {
        currentCourseIndex = (currentCourseIndex + 1) % totalCourses;
        updateCourseCarousel();
      }

      function prevCourse() {
        currentCourseIndex = (currentCourseIndex - 1 + totalCourses) % totalCourses;
        updateCourseCarousel();
      }

      if (nextBtn) nextBtn.addEventListener('click', nextCourse);
      if (prevBtn) prevBtn.addEventListener('click', prevCourse);

      // 旋轉圓圈文字效果
      const circleText = document.querySelector('.circle-text span') as HTMLElement;
      if (circleText) {
        const text = circleText.textContent || '';
        circleText.innerHTML = '';

        for (let i = 0; i < text.length; i++) {
          const char = document.createElement('span');
          char.textContent = text[i];
          char.style.transform = `rotate(${i * (360 / text.length)}deg)`;
          char.style.position = 'absolute';
          char.style.left = '50%';
          char.style.transformOrigin = '0 50px';
          circleText.appendChild(char);
        }
      }

      // 平滑滾動效果
      const scrollLinks = document.querySelectorAll('a[href^="#"]') as NodeListOf<HTMLAnchorElement>;
      scrollLinks.forEach(anchor => {
        anchor.addEventListener('click', function (e: Event) {
          e.preventDefault();
          const href = (this as HTMLAnchorElement).getAttribute('href');
          const target = href ? document.querySelector(href) : null;
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });

      // 視差滾動效果
      window.addEventListener('scroll', () => {
        const scrolled = window.pageYOffset;
        const heroImage = document.querySelector('.hero-image') as HTMLElement;
        if (heroImage) {
          heroImage.style.transform = `translateY(${scrolled * 0.5}px)`;
        }
      });

      // 鍵盤導航
      document.addEventListener('keydown', (e: KeyboardEvent) => {
        if (isScrolling) return;

        if (e.key === 'ArrowDown' && currentSection < totalSections - 1) {
          e.preventDefault();
          currentSection++;
          isScrolling = true;
          window.scrollTo({
            top: currentSection * window.innerHeight,
            behavior: 'smooth'
          });
          showSection(currentSection);
          setTimeout(() => { isScrolling = false; }, 800);
        } else if (e.key === 'ArrowUp' && currentSection > 0) {
          e.preventDefault();
          currentSection--;
          isScrolling = true;
          window.scrollTo({
            top: currentSection * window.innerHeight,
            behavior: 'smooth'
          });
          showSection(currentSection);
          setTimeout(() => { isScrolling = false; }, 800);
        }
      });

      // 滾輪事件處理 - 更靈敏的響應
      let wheelTimeout: number;
      let lastWheelTime = 0;
      let wheelDelta = 0;

      window.addEventListener('wheel', (e: WheelEvent) => {
        e.preventDefault();

        const currentTime = Date.now();
        wheelDelta += Math.abs(e.deltaY);

        // 降低防抖時間並增加靈敏度
        clearTimeout(wheelTimeout);
        wheelTimeout = window.setTimeout(() => {
          // 提高觸發閾值，防止過於敏感
          if (wheelDelta > 30) {
            if (e.deltaY > 0 && currentSection < totalSections - 1) {
              // 向下滾動
              currentSection++;
              isScrolling = true;
              window.scrollTo({
                top: currentSection * window.innerHeight,
                behavior: 'smooth'
              });
              showSection(currentSection);
              setTimeout(() => { isScrolling = false; }, 800);
            } else if (e.deltaY < 0 && currentSection > 0) {
              // 向上滾動
              currentSection--;
              isScrolling = true;
              window.scrollTo({
                top: currentSection * window.innerHeight,
                behavior: 'smooth'
              });
              showSection(currentSection);
              setTimeout(() => { isScrolling = false; }, 800);
            }
          }
          wheelDelta = 0;
        }, 20);

        lastWheelTime = currentTime;
      }, { passive: false });
    });
  </script>
