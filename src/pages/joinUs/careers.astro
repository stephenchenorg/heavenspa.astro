---
import {seoMeta} from '@stephenchenorg/astro/page'
import Layout from '@/layouts/Layout.astro'
import SectionTitle from "@/components/ui/SectionTitle.astro"
import CareersForm from '@/components/joinUs/careersForm.vue'
import FAQ, { type FaqCategories } from '@/components/FAQ.astro'
import { createAstroT } from '@/utils/astro-i18n'
import { getCompanySetting } from '@/api/companySetting'
import { getLocaleFromRequest } from '@/utils/astro-i18n'

const locale = getLocaleFromRequest(Astro.request)
const companySetting = await getCompanySetting(locale)

const t = createAstroT(Astro)

const meta = seoMeta({
    title: `${t('careers.title')} - Heaven Spa`,
})

// 定義 FAQ 資料
const careersFaqData: FaqCategories = {
  徵才問題: [
    {
      id: 'booking-1',
      question: '如何加入享天堂團隊',
      answer: 'heavenspa999@gamil.com或填寫簡易履歷表',
    },
    {
      id: 'booking-2',
      question: '多久知道會知道自己符合資格？',
      answer: '人事部門初步審核履歷，若資格符合將於7日內與您聯繫 !',
    },
  ],
}

---

<Layout meta={meta}>
    <main class="section-container pt-32 min-h-screen">
        <!-- 標題區 -->
        <SectionTitle 
            title={t('careers.title')} 
            subtitle={t('careers.subtitle')}
            titleI18n="careers.title"
            subtitleI18n="careers.subtitle"
        />

        <!-- Page content will be added here -->
        <div class="max-w-7xl lg:mx-auto px-4 sm:px-6 lg:px-8">
            <!-- 聯絡資訊區 -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
                <!--上方區塊-->
                <div class="order-1 lg:order-1">
                    <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold mb-4 lg:mb-6" data-i18n="careers.headline">{t('careers.headline')}</h2>
                    <p class="text-neutral-400 text-sm sm:text-base mb-4" data-i18n="careers.description">{t('careers.description')}</p>
                    <ul class="grid space-y-2 my-4 text-sm sm:text-base">
                        <li>✔ <span data-i18n="careers.requirements.freedom">{t('careers.requirements.freedom')}</span></li>
                        <li>✔ <span data-i18n="careers.requirements.dreams">{t('careers.requirements.dreams')}</span></li>
                        <li>✔ <span data-i18n="careers.requirements.hardwork">{t('careers.requirements.hardwork')}</span></li>
                        <li>✔ <span data-i18n="careers.requirements.quality">{t('careers.requirements.quality')}</span></li>
                        <li>✔ <span data-i18n="careers.requirements.detail">{t('careers.requirements.detail')}</span></li>
                        <li>✔ <span data-i18n="careers.requirements.responsibility">{t('careers.requirements.responsibility')}</span></li>
                    </ul>
                    <p class="text-sm sm:text-base" data-i18n="careers.conclusion">{t('careers.conclusion')}</p>
                </div>
                <div class="order-2 lg:order-2">
                    <h3 class="text-xl sm:text-2xl font-bold mb-4" style="color: var(--theme-text);" data-i18n="careers.contact.title">{t('careers.contact.title')}</h3>
                    <p class="mb-6 text-sm sm:text-base" style="color: var(--theme-text-secondary);" data-i18n="careers.contact.description">
                        {t('careers.contact.description')}
                    </p>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 lg:gap-6">
                        <!-- Say Hello -->
                        <div class="border-l-4 pl-4 sm:pl-6 py-4" style="border-color: var(--color-primary-500);">
                            <div class="mb-3 sm:mb-4">
                                <div class="relative">
                                    <svg class="w-6 h-6 sm:w-8 sm:h-8 mb-2" style="color: var(--color-primary-500);"
