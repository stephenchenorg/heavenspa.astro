<script>
    document.addEventListener('DOMContentLoaded', () => {
        // 監聽主題變化事件
        document.addEventListener('themeChanged', (event: Event) => {
            const customEvent = event as CustomEvent<{ theme: string }>;
            const theme = customEvent.detail.theme;
            updateFormTheme(theme);
        });

        // 初始化表單主題
        const currentTheme = document.body.classList.contains('dark-theme') ? 'dark' : 'light';
        updateFormTheme(currentTheme);

        function updateFormTheme(theme: string) {
            const form = document.querySelector('form') as HTMLFormElement;
            const labels = document.querySelectorAll('form label') as NodeListOf<HTMLLabelElement>;
            const inputs = document.querySelectorAll('form input, form textarea') as NodeListOf<HTMLInputElement | HTMLTextAreaElement>;
            const button = document.querySelector('form button[type="submit"]') as HTMLButtonElement;

            if (form) {
                form.style.color = 'var(--theme-text)';
            }

            labels.forEach((label: HTMLLabelElement) => {
                label.style.color = 'var(--theme-text)';
            });

            inputs.forEach((input: HTMLInputElement | HTMLTextAreaElement) => {
                input.style.background = 'var(--theme-bg)';
                input.style.color = 'var(--theme-text)';

                // 設定不同主題下的邊框顏色
                if (theme === 'dark') {
                    input.style.border = '1px solid #444444';
                    input.style.setProperty('--placeholder-color', '#888888');
                } else {
                    input.style.border = '1px solid #e5e7eb';
                    input.style.setProperty('--placeholder-color', '#666666');
                }
            });

            if (button) {
                button.style.background = 'var(--color-primary-500)';
                button.style.color = 'var(--theme-bg)';
            }
        }
    });
</script>

<style>
    /* Placeholder 顏色在不同主題下的樣式 */
    form input::placeholder,
    form textarea::placeholder {
        color: var(--placeholder-color, #666666);
        opacity: 0.7;
    }

    /* 確保焦點狀態在兩種主題下都正常 */
    form input:focus,
    form textarea:focus {
        outline: none;
        box-shadow: 0 0 0 2px var(--color-primary-500);
    }

    /* hover 效果在不同主題下 */
    form input:hover,
    form textarea:hover {
        border-color: var(--color-primary-400) !important;
    }

    /* 確保邊框顏色在不同主題下正確顯示 */
    .dark-theme form input,
    .dark-theme form textarea {
        border-color: #444444 !important;
    }

    .light-theme form input,
    .light-theme form textarea {
