---
import { seoMeta } from '@stephenchenorg/astro/page'
import Layout from '@/layouts/Layout.astro'

const meta = seoMeta({
  title: 'Heaven Spa - 專業除毛課程',
  description: '專業除毛技術培訓，學習安全有效的除毛方法，包含雷射與傳統除毛技術'
})

const courseData = {
  title: '專業除毛課程',
  subtitle: 'Professional Hair Removal Training',
  duration: '2個月',
  price: 'NT$ 35,000',
  level: '中級',
  description: '專業除毛課程涵蓋各種除毛技術，從傳統蜜蠟除毛到最新雷射除毛技術，讓學員掌握安全有效的除毛方法，並了解不同膚質的處理方式。',
  
  modules: [
    {
      title: '毛髮生理學',
      duration: '1週',
      content: ['毛髮結構', '生長週期', '影響因素', '膚質分析'],
      image: '/api/placeholder/400/300'
    },
    {
      title: '蜜蠟除毛技術',
      duration: '3週',
      content: ['蜜蠟選擇', '操作技巧', '安全防護', '術後護理'],
      image: '/api/placeholder/400/300'
    },
    {
      title: '雷射除毛原理',
      duration: '2週',
      content: ['雷射原理', '設備操作', '參數設定', '安全規範'],
      image: '/api/placeholder/400/300'
    },
    {
      title: '電針除毛技術',
      duration: '1週',
      content: ['電針原理', '操作手法', '適用範圍', '注意事項'],
      image: '/api/placeholder/400/300'
    }
  ]
}
---

<Layout meta={meta}>
  <!-- 導航列 -->
  <nav class="main-nav">
    <div class="nav-logo">
      <a href="/">
        <div class="logo-icon">HS</div>
      </a>
    </div>
    <div class="nav-menu">
      <a href="/" class="nav-item">HOME</a>
      <a href="/courses" class="nav-item">COURSES</a>
      <a href="/about" class="nav-item">ABOUT</a>
      <a href="/contact" class="nav-item">CONTACT</a>
    </div>
    <div class="nav-contact">
      <button class="contact-btn">CONTACT</button>
    </div>
  </nav>

  <!-- 麵包屑導航 -->
  <section class="breadcrumb">
    <div class="container">
      <a href="/">首頁</a>
      <span class="separator">></span>
      <a href="/courses">課程介紹</a>
      <span class="separator">></span>
      <span class="current">專業除毛課程</span>
    </div>
  </section>

  <!-- 課程標題區塊 -->
  <section class="course-hero">
    <div class="container">
      <div class="course-header">
        <div class="course-info">
          <h1 class="course-title">{courseData.title}</h1>
          <p class="course-subtitle">{courseData.subtitle}</p>
          <p class="course-description">{courseData.description}</p>
          
          <div class="course-meta">
            <div class="meta-item">
              <span class="meta-label">課程時長</span>
              <span class="meta-value">{courseData.duration}</span>
            </div>
            <div class="meta-item">
              <span class="meta-label">課程費用</span>
              <span class="meta-value">{courseData.price}</span>
            </div>
            <div class="meta-item">
              <span class="meta-label">適合程度</span>
              <span class="meta-value">{courseData.level}</span>
            </div>
          </div>
          
          <button class="enroll-btn">立即報名</button>
        </div>
        <div class="course-image">
          <img src="/api/placeholder/600/400" alt="專業除毛課程" />
          <div class="image-overlay"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- 課程模組 -->
  <section class="course-modules">
    <div class="container">
      <h2 class="section-title">課程內容</h2>
      <div class="modules-grid">
        {courseData.modules.map((module, index) => (
          <div class="module-card">
            <div class="module-image">
              <img src={module.image} alt={module.title} />
            </div>
            <div class="module-content">
              <h3 class="module-title">{module.title}</h3>
              <p class="module-duration">課程時長：{module.duration}</p>
              <ul class="module-topics">
                {module.content.map(topic => (
                  <li>{topic}</li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- 其他共用樣式和腳本與 massage.astro 相同 -->
  <style>
    /* 在這裡放入與 massage.astro 相同的樣式 */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      line-height: 1.6;
      color: #333;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
    }

    /* 導航列樣式與 massage.astro 相同 */
    .main-nav {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      z-index: 1000;
      padding: 1rem 3rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .logo-icon {
      width: 40px;
      height: 40px;
      background: linear-gradient(135deg, #f093fb, #f5576c);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: 700;
      font-size: 14px;
    }

    .nav-menu {
      display: flex;
      gap: 2rem;
    }

    .nav-item {
      text-decoration: none;
      color: #333;
      font-weight: 500;
      font-size: 0.9rem;
      letter-spacing: 1px;
      text-transform: uppercase;
      transition: color 0.3s ease;
    }

    .nav-item:hover {
      color: #f5576c;
    }

    .contact-btn {
      background: #f5576c;
      color: white;
      border: none;
      padding: 0.8rem 1.5rem;
      border-radius: 25px;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .contact-btn:hover {
      background: #e94560;
      transform: translateY(-2px);
    }

    /* 使用除毛課程的粉色主題色彩 */
    .breadcrumb {
      margin-top: 80px;
      padding: 1rem 0;
      background: #f8f9fa;
      border-bottom: 1px solid #e9ecef;
    }

    .breadcrumb a {
      color: #636e72;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .breadcrumb a:hover {
      color: #f5576c;
    }

    .separator {
      margin: 0 0.5rem;
      color: #636e72;
    }

    .current {
      color: #f5576c;
      font-weight: 500;
    }

    .course-hero {
      padding: 4rem 0;
      background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }

    .course-header {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: center;
    }

    .course-title {
      font-size: 3rem;
      font-weight: 900;
      color: white;
      margin-bottom: 1rem;
      letter-spacing: -0.02em;
    }

    .course-subtitle {
      font-size: 1.2rem;
      color: rgba(255, 255, 255, 0.8);
      margin-bottom: 2rem;
      letter-spacing: 2px;
      text-transform: uppercase;
    }

    .course-description {
      font-size: 1.1rem;
      color: rgba(255, 255, 255, 0.9);
      line-height: 1.8;
      margin-bottom: 2rem;
    }

    .course-meta {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1rem;
      margin-bottom: 2rem;
    }

    .meta-item {
      text-align: center;
      padding: 1rem;
      background: rgba(255, 255, 255, 0.2);
      backdrop-filter: blur(10px);
      border-radius: 10px;
    }

    .meta-label {
      display: block;
      font-size: 0.9rem;
      color: rgba(255, 255, 255, 0.8);
      margin-bottom: 0.5rem;
    }

    .meta-value {
      font-size: 1.1rem;
      font-weight: 700;
      color: white;
    }

    .enroll-btn {
      background: white;
      color: #f5576c;
      border: none;
      padding: 1rem 2rem;
      border-radius: 30px;
      font-size: 1.1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .enroll-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    .course-image {
      position: relative;
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    }

    .course-image img {
      width: 100%;
      height: 400px;
      object-fit: cover;
    }

    .image-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(45deg, rgba(240, 147, 251, 0.3), transparent);
    }

    .course-modules {
      padding: 6rem 0;
      background: white;
    }

    .section-title {
      text-align: center;
      font-size: 2.5rem;
      font-weight: 800;
      color: #2d3436;
      margin-bottom: 4rem;
      letter-spacing: -0.02em;
    }

    .modules-grid {
      display: grid;
      gap: 2rem;
    }

    .module-card {
      display: grid;
      grid-template-columns: 200px 1fr;
      gap: 2rem;
      background: white;
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
    }

    .module-card:hover {
      transform: translateY(-5px);
    }

    .module-image img {
      width: 100%;
      height: 150px;
      object-fit: cover;
    }

    .module-content {
      padding: 2rem;
    }

    .module-title {
      font-size: 1.5rem;
      font-weight: 700;
      color: #2d3436;
      margin-bottom: 0.5rem;
    }

    .module-duration {
      color: #f5576c;
      font-weight: 600;
      margin-bottom: 1rem;
    }

    .module-topics {
      list-style: none;
    }

    .module-topics li {
      padding: 0.5rem 0;
      border-bottom: 1px solid #f1f3f4;
      color: #636e72;
    }

    .module-topics li:last-child {
      border-bottom: none;
    }

    /* 響應式設計 */
    @media (max-width: 768px) {
      .main-nav {
        padding: 1rem 2rem;
      }

      .nav-menu {
        display: none;
      }

      .course-header {
        grid-template-columns: 1fr;
        gap: 2rem;
      }

      .course-title {
        font-size: 2rem;
      }

      .course-meta {
        grid-template-columns: 1fr;
      }

      .module-card {
        grid-template-columns: 1fr;
      }
    }
  </style>
</Layout>
