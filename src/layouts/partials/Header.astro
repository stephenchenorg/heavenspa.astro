<script>
  // å°èˆªæ»¾å‹•æ•ˆæœ
  document.addEventListener('DOMContentLoaded', () => {
    const mainNavs = document.querySelectorAll('.main-nav') as NodeListOf<HTMLElement>;
    
    function handleNavScroll() {
      const scrollTop = window.pageYOffset;
      
      mainNavs.forEach((mainNav) => {
        if (scrollTop > 20) {
          mainNav.classList.add('scrolled');
        } else {
          mainNav.classList.remove('scrolled');
        }
      });
    }

    window.addEventListener('scroll', handleNavScroll);

    // æ‰‹æ©Ÿç‰ˆé¸å–®åŠŸèƒ½ - å»¶é²åˆå§‹åŒ–
    setTimeout(() => {
      console.log('Initializing mobile menu...');
      
      const mobileMenuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
      const mobileMenuClose = document.getElementById('mobile-menu-close');
      
      console.log('Button exists:', !!mobileMenuBtn);
      console.log('Button display:', mobileMenuBtn ? getComputedStyle(mobileMenuBtn).display : 'N/A');
      console.log('Button visibility:', mobileMenuBtn ? getComputedStyle(mobileMenuBtn).visibility : 'N/A');
      console.log('Window width:', window.innerWidth);
      const mobileNavItems = document.querySelectorAll('.mobile-nav-item');

      console.log('Mobile menu elements:', {
        btn: mobileMenuBtn,
        overlay: mobileMenuOverlay,
        close: mobileMenuClose,
        items: mobileNavItems.length
      });

      function openMobileMenu() {
        console.log('Opening mobile menu');
        if (mobileMenuOverlay) {
          mobileMenuOverlay.classList.add('active');
        }
        if (mobileMenuBtn) {
          mobileMenuBtn.classList.add('active');
        }
        document.body.style.overflow = 'hidden';
      }

      function closeMobileMenu() {
        console.log('Closing mobile menu');
        if (mobileMenuOverlay) {
          mobileMenuOverlay.classList.remove('active');
        }
        if (mobileMenuBtn) {
          mobileMenuBtn.classList.remove('active');
        }
        document.body.style.overflow = '';
      }

      // æ‰“é–‹é¸å–® - ç°¡åŒ–ç‰ˆæœ¬ï¼Œç›´æ¥åœ¨åŸæŒ‰éˆ•ä¸Šæ·»åŠ äº‹ä»¶
      if (mobileMenuBtn) {
        console.log('Adding event listeners to mobile menu button (simplified version)');
        
        // ç›´æ¥åœ¨åŸæŒ‰éˆ•ä¸Šæ·»åŠ äº‹ä»¶ç›£è½å™¨
        console.log('Adding event listeners to original button...');
        
        // æ·»åŠ é»æ“Šäº‹ä»¶
        mobileMenuBtn.addEventListener('click', (e) => {
          console.log('ğŸ”´ Mobile menu button clicked! (original)');
          e.preventDefault();
          e.stopPropagation();
          openMobileMenu();
        });
        console.log('âœ… Click event listener added to original button');

        // æ·»åŠ è§¸æ§äº‹ä»¶
        mobileMenuBtn.addEventListener('touchend', (e) => {
          console.log('ğŸ”´ Mobile menu button touched! (original)');
          e.preventDefault();
          e.stopPropagation();
          openMobileMenu();
        });
        console.log('âœ… Touchend event listener added to original button');

        // æ·»åŠ é¡å¤–çš„äº‹ä»¶ç›£è½å™¨ä½œç‚ºå‚™ç”¨
        mobileMenuBtn.addEventListener('mousedown', (e) => {
          console.log('ğŸŸ¡ Mobile menu button mousedown! (original)');
        });
        
        mobileMenuBtn.addEventListener('touchstart', (e) => {
          console.log('ğŸŸ¡ Mobile menu button touchstart! (original)');
        });

        // ç›´æ¥è¨­ç½® onclick å±¬æ€§ä½œç‚ºæœ€å¾Œå‚™ç”¨
        mobileMenuBtn.onclick = function(e) {
          console.log('ğŸŸ¢ Mobile menu button onclick fired! (original)');
          e.preventDefault();
          e.stopPropagation();
          openMobileMenu();
          return false;
        };
        console.log('âœ… Onclick attribute set on original button');

        // ç¢ºä¿æŒ‰éˆ•å¯è¦‹ä¸”å¯é»æ“Š
        mobileMenuBtn.style.pointerEvents = 'auto';
        mobileMenuBtn.style.zIndex = '10000';
        
        // æ·»åŠ æ˜é¡¯çš„èª¿è©¦æ¨£å¼
        mobileMenuBtn.style.border = '3px solid blue';
        mobileMenuBtn.style.backgroundColor = 'rgba(0, 0, 255, 0.3)';
        
        // è©³ç´°çš„å¯è¦‹æ€§æª¢æŸ¥
        const rect = mobileMenuBtn.getBoundingClientRect();
        const styles = getComputedStyle(mobileMenuBtn);
        
        console.log('ğŸ” Button visibility check (original):', {
          display: styles.display,
          visibility: styles.visibility,
          opacity: styles.opacity,
          pointerEvents: styles.pointerEvents,
          zIndex: styles.zIndex,
          position: styles.position,
          width: rect.width,
          height: rect.height,
          top: rect.top,
          left: rect.left,
          bottom: rect.bottom,
          right: rect.right
        });
        
        console.log('Mobile menu button setup complete (original)', mobileMenuBtn);
      }

      // é—œé–‰é¸å–®
      if (mobileMenuClose) {
        mobileMenuClose.addEventListener('click', closeMobileMenu);
      }

      // é»æ“ŠèƒŒæ™¯é—œé–‰é¸å–®
      if (mobileMenuOverlay) {
        mobileMenuOverlay.addEventListener('click', (e) => {
          if (e.target === mobileMenuOverlay) {
            closeMobileMenu();
          }
        });
      }

      // é»æ“Šé¸å–®é …ç›®å¾Œé—œé–‰é¸å–®
      mobileNavItems.forEach(item => {
        item.addEventListener('click', closeMobileMenu);
      });

      // ESC éµé—œé–‰é¸å–®
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && mobileMenuOverlay?.classList.contains('active')) {
          closeMobileMenu();
        }
      });

      // æ¸¬è©¦æŒ‰éˆ•æ˜¯å¦å¯é»æ“Š
      console.log('Mobile menu setup complete');
      
      // å…¨å±€æ¸¬è©¦å‡½æ•¸
      (window as any).testMobileMenu = function() {
        console.log('Test function called!');
        openMobileMenu();
      };
    }, 100);
  });
</script>
