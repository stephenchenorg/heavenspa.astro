---
interface Props {
  ga4TrackingId: string
}

const { ga4TrackingId } = Astro.props
---

<!--
  This section is for Google Analytics 4 (GA4) tracking code.
  Using defer attribute to prevent blocking page render and improve LCP.
  GA script will load after HTML parsing is complete.
-->
<script is:inline defer src={`https://www.googletagmanager.com/gtag/js?id=${ga4TrackingId}`}></script>
<script is:inline defer define:vars={{ ga4TrackingId }}>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', ga4TrackingId);
</script>
