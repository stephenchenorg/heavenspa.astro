---
import type { PageMeta } from '@/types'
import { createCompanySetting } from '@stephenchenorg/astro/company-setting'
import { getLocale } from 'i18n:astro'
import { getBanners } from '@/api/banners'
import siteConfig from '@/site.config'
import GAScript from './partials/GAScript.astro'
import MetaPixel from './partials/MetaPixel.astro'
import '@/styles/index.css'

interface Props {
  // metadata
  meta: PageMeta

  // layout props
  bodyClass?: string
}

const {
  meta,
  bodyClass,
} = Astro.props

const companySetting = createCompanySetting({
  name: siteConfig.name,
  description: siteConfig.description,
  logo: 'https//example.com/logo.png',
})

// const pathname = Astro.url.pathname

const ga4TrackingId = siteConfig.ga4TrackingId
const metaPixelId = siteConfig.metaPixelId

// 獲取當前語言
const currentLocale = getLocale()
const htmlLang = currentLocale === 'zh-TW' ? 'zh-TW' : 'en'

// 如果沒有 og_image，使用第一張 banner 圖片作為預設
let ogImage = meta.og_image
if (!ogImage) {
  const banners = await getBanners()
  ogImage = banners[0]?.image?.desktop || meta.og_image
}
---

<!doctype html>
<html class="dark" lang={htmlLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Load only what you need with display=swap -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300..800&family=Krona+One&family=Noto+Sans+TC:wght@300..800&family=Noto+Serif+TC:wght@300..800&family=Roboto:wght@300;400;500;700&display=swap" />

    <slot name="head" />

    <!-- favicon -->
    <link rel="icon" type="image/png" href="/favicon/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon/favicon.svg" />
    <link rel="shortcut icon" href="/favicon/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
    <link rel="manifest" href="/favicon/site.webmanifest" />

    {!import.meta.env.DEV && (
      <>
        <!-- Canonical URL -->
        <link rel="canonical" href={meta.canonical} />

        <!-- SEO Meta Tags (必定顯示) -->
        <title>{meta.title ? `${meta.title} - ${siteConfig.name}` : siteConfig.name}</title>
        <meta name="description" content={meta.seo_description} />
        <meta name="keywords" content={meta.seo_keyword} />

        <!-- Open Graph Meta Tags (必定顯示) -->
        <meta property="og:title" content={meta.og_title} />
        <meta property="og:description" content={meta.og_description} />
        <meta property="og:url" content={meta.canonical} />
        <meta property="og:site_name" content={companySetting.name} />
        <meta property="og:type" content="website" />
        <meta property="og:image" content={ogImage} />

        <!-- 後台額外欄位 (有值才顯示) -->
        {meta.seo_head && <Fragment set:html={meta.seo_head} />}
        {meta.seo_json_ld && <script is:inline type="application/ld+json" set:html={meta.seo_json_ld}></script>}
      </>
    )}

    {import.meta.env.DEV && ga4TrackingId && <GAScript ga4TrackingId={ga4TrackingId} />}
    {!import.meta.env.DEV && metaPixelId && <MetaPixel pixelId={metaPixelId} />}
  </head>
  <body class:list={['antialiased', bodyClass]}>
    <slot />

    {!import.meta.env.DEV && meta.seo_body && <Fragment set:html={meta.seo_body} />}
  </body>
</html>
