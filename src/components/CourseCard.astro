---
interface Course {
  id: string;
  title: string;
  subtitle: string;
  description: string;
  image: string;
  features: string[];
  duration: string;
  level: string;
  gradient: string;
}

interface Props {
  course: Course;
  index?: number;
}

const { course, index = 0 } = Astro.props;
---

<div class="course-slide" data-index={index}>
  <div class="course-card" style={`background: ${course.gradient}`}>
    <div class="course-image">
      <img src={course.image} alt={course.title} />
      <div class="course-overlay"></div>
    </div>
    <div class="course-content">
      <div class="course-header">
        <h3 class="course-title">{course.title}</h3>
        <p class="course-subtitle">{course.subtitle}</p>
      </div>
      <p class="course-description">{course.description}</p>
      <div class="course-features">
        {course.features.map(feature => (
          <span class="feature-tag">{feature}</span>
        ))}
      </div>
      <div class="course-info">
        <div class="info-item">
          <span class="info-label">課程時長</span>
          <span class="info-value">{course.duration}</span>
        </div>
        <div class="info-item">
          <span class="info-label">適合程度</span>
          <span class="info-value">{course.level}</span>
        </div>
      </div>
      <a href={`/courses/${course.id}`} class="course-btn">
        查看詳情
        <span class="btn-arrow">→</span>
      </a>
    </div>
  </div>
</div>

<style>
  .course-slide {
    min-width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
  }

  .course-card {
    max-width: 1200px;
    width: 100%;
    border-radius: 30px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 600px;
    transition: transform 0.3s ease;
  }

  .course-card:hover {
    transform: translateY(-10px);
  }

  .course-image {
    position: relative;
    overflow: hidden;
  }

  .course-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .course-card:hover .course-image img {
    transform: scale(1.1);
  }

  .course-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(45deg, rgba(0, 0, 0, 0.2), transparent);
  }

  .course-content {
    padding: 3rem;
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .course-header {
    margin-bottom: 2rem;
  }

  .course-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    line-height: 1.2;
  }

  .course-subtitle {
    font-size: 1.1rem;
    opacity: 0.9;
    font-weight: 300;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .course-description {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 2rem;
    opacity: 0.95;
  }

  .course-features {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
    margin-bottom: 2rem;
  }

  .feature-tag {
    background: rgba(255, 255, 255, 0.2);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 500;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .course-info {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin-bottom: 2.5rem;
  }

  .info-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .info-label {
    font-size: 0.9rem;
    opacity: 0.8;
    font-weight: 500;
  }

  .info-value {
    font-size: 1.1rem;
    font-weight: 600;
  }

  .course-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.9);
    color: #2d3436;
    padding: 1rem 2rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    align-self: flex-start;
  }

  .course-btn:hover {
    background: white;
    transform: translateX(5px);
  }

  .btn-arrow {
    transition: transform 0.3s ease;
  }

  .course-btn:hover .btn-arrow {
    transform: translateX(5px);
  }

  /* 響應式設計 */
  @media (max-width: 968px) {
    .course-card {
      grid-template-columns: 1fr;
      min-height: auto;
    }

    .course-content {
      padding: 2rem;
    }

    .course-title {
      font-size: 2rem;
    }

    .course-info {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }

  @media (max-width: 768px) {
    .course-slide {
      padding: 2rem 1rem;
    }

    .course-content {
      padding: 1.5rem;
    }

    .course-title {
      font-size: 1.8rem;
    }

    .feature-tag {
      font-size: 0.8rem;
      padding: 0.4rem 0.8rem;
    }
  }
</style>
