---
// Button Demo Component - 展示不同Button變化的範例
import Button from './Button.astro';
---

<div class="button-demo">
  <h2>Button UI Component Demo</h2>
  
  <div class="button-group">
    <h3>Primary Buttons</h3>
    <div class="button-row">
      <Button variant="primary" size="small">小按鈕</Button>
      <Button variant="primary" size="medium">中按鈕</Button>
      <Button variant="primary" size="large">大按鈕</Button>
    </div>
  </div>

  <div class="button-group">
    <h3>Secondary Buttons</h3>
    <div class="button-row">
      <Button variant="secondary" size="small">小按鈕</Button>
      <Button variant="secondary" size="medium">中按鈕</Button>
      <Button variant="secondary" size="large">大按鈕</Button>
    </div>
  </div>

  <div class="button-group">
    <h3>Link Buttons</h3>
    <div class="button-row">
      <Button href="#" variant="primary" size="medium">連結按鈕</Button>
      <Button href="#" variant="secondary" size="medium">連結按鈕</Button>
    </div>
  </div>
</div>

<style>
  .button-demo {
    padding: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .button-group {
    margin-bottom: 2rem;
  }

  .button-group h3 {
    margin-bottom: 1rem;
    color: #333;
  }

  .button-row {
    display: flex;
    gap: 1rem;
    align-items: center;
    flex-wrap: wrap;
  }

  h2 {
    text-align: center;
    margin-bottom: 2rem;
    color: #333;
  }
</style>