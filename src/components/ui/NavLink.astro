---
export interface Props {
  href: string
  text: string
  isActive?: boolean
  variant?: 'desktop' | 'mobile'
  i18nKey?: string
}

const {
  href,
  text,
  isActive = false,
  variant = 'desktop',
  i18nKey
} = Astro.props

const baseClasses = {
  desktop: `nav-item ${isActive ? 'active' : ''}`,
  mobile: `mobile-nav-item ${isActive ? 'active' : ''}`
}

const styles = {
  desktop: 'color: var(--theme-nav-text, #000000); font-size: 16px;',
  mobile: 'color: var(--theme-mobile-nav-text, #D7AE54); font-size: 16px;'
}

const underlineStyles = {
  desktop: 'background: var(--theme-nav-text, #000000);',
  mobile: 'background: var(--theme-mobile-nav-indicator, #D7AE54);'
}
---

{variant === 'desktop' ? (
  <a
    href={href}
    class={baseClasses.desktop}
    style={styles.desktop}
  >
    <span data-i18n={i18nKey}>{text}</span>
    <div class="nav-underline" style={underlineStyles.desktop}></div>
  </a>
) : (
  <a
    href={href}
    class={baseClasses.mobile}
    style={styles.mobile}
  >
    <span data-i18n={i18nKey}>{text}</span>
    <div class="mobile-nav-indicator" style={underlineStyles.mobile}></div>
  </a>
)}