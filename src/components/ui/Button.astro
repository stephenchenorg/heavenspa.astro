---
export interface Props {
  href?: string
  onclick?: string
  variant?: 'primary' | 'secondary'
  size?: 'small' | 'medium' | 'large'
  children?: any
}

const {
  href,
  onclick,
  variant = 'primary',
  size = 'large',
} = Astro.props

// Size variants
const sizeClasses = {
  small: "px-4 py-2 text-sm w-[120px]",
  medium: "px-6 py-3 text-sm w-[160px]", 
  large: "px-8 py-4 text-base w-[209px]"
}

// Variant classes using centralized design tokens
const variantClasses = {
  primary: "btn-primary",
  secondary: "btn-secondary"
}

const buttonClass = `${sizeClasses[size]} ${variantClasses[variant]}`
---

{href ? (
  <a href={href} class={buttonClass}>
    <slot />
  </a>
) : (
  <button class={buttonClass} onclick={onclick}>
    <slot />
  </button>
)}
