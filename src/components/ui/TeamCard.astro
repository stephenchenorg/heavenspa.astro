---
import type { TeamMember } from '@/types'
import ImageCarousel from '@/components/ui/ImageCarousel.astro'
import { createNestedT, getLinkByLocale } from '@/utils/i18n'
import Button from './Button.astro'

const t = createNestedT()

interface Props {
  member: TeamMember
  uniqueId?: string
}

const { member, uniqueId } = Astro.props

---
<a
  class="group cursor-pointer transition-transform duration-300 hover:-translate-y-2 w-full h-full"
  href={getLinkByLocale(`/team/${member.slug}`)}
>
  <!-- 圖片容器 -->
  <div class="relative w-full aspect-square overflow-hidden mb-4 bg-[var(--theme-border,#e5e7eb)]">
    <!-- 團隊成員照片轮播 -->
    <ImageCarousel
      member={member}
      uniqueId={uniqueId}
      containerClass="carousel-container relative w-full h-full overflow-hidden backface-visibility-hidden"
    />

    <!-- Hover 遮罩 -->
    <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col items-center justify-center space-y-3">
      <div class="text-center space-y-1">
        <h3 class="text-xl font-bold text-white">{member.title}</h3>
        {member.job && (
          <p class="text-sm text-white/80">{member.job}</p>
        )}
      </div>
      <Button
        variant="ghost"
        text={t('buttons.view-more')}
        size="small"
        icon="→"
        wrapperClass="flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300"
      />
    </div>
  </div>

  <!-- 卡片資訊 -->
  <div class="space-y-1">
    <!-- 標題和評分 -->
    <div class="flex items-start justify-between">
      <h3
        class="text-base font-semibold leading-tight line-clamp-1 flex-1 mr-2 text-[var(--theme-text,#1f2937)]"
      >
        {member.title}
      </h3>
    </div>
  </div>
</a>

<style>
  .backface-visibility-hidden {
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
  }
</style>
