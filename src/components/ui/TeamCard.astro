---
import ImageCarousel from '@/components/ui/ImageCarousel.astro'
import type { TeamMember } from '@/types'

interface Props {
  member: TeamMember
  uniqueId: string
  isMobile?: boolean
}

const { member, uniqueId, isMobile = false } = Astro.props
---
<div
  class="group cursor-pointer transition-transform duration-300 hover:-translate-y-2 w-full h-full"
  onclick={`window.location.href='/team/${member.id}'`}
>
  <!-- 圖片容器 -->
  <div class="relative w-full aspect-square overflow-hidden mb-4 bg-[var(--theme-border,#e5e7eb)]">
    <!-- 團隊成員照片轮播 -->
    <ImageCarousel
      member={member}
      uniqueId={uniqueId}
      containerClass="carousel-container relative w-full h-full overflow-hidden backface-visibility-hidden"
    />
    
    <!-- Hover 遮罩 -->
    <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
      <div class="text-center text-white px-4">
        <!-- 名字 -->
        <h4 class="text-xl font-bold mb-3 leading-tight">
          {member.title}
        </h4>
        
        <!-- 前往查看按鈕 -->
        <div class="bg-white/20 backdrop-blur-sm px-4 py-2 rounded-full text-sm font-medium border border-white/30 shadow-lg hover:bg-white/30 transition-colors duration-200 flex items-center space-x-2 justify-center">
          <span>前往查看</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- 卡片資訊 -->
  <div class="space-y-1">
    <!-- 標題和評分 -->
    <div class="flex items-start justify-between">
      <h3
        class="text-base font-semibold leading-tight line-clamp-1 flex-1 mr-2 text-[var(--theme-text,#1f2937)]"
      >
        {member.title}
      </h3>
    </div>
  </div>
</div>

<style>
  .backface-visibility-hidden {
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
  }
</style>