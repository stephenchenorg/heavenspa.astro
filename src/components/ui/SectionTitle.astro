---
export interface Props {
  title: string
  subtitle: string
  class?: astroHTML.JSX.HTMLAttributes['class']
}

const {
  title,
  subtitle,
  class: className = '',
} = Astro.props
---

<div class={`text-left max-w-7xl mx-auto w-full py-8 mb-12 ${className}`}>
  <h2 class="mb-4 lg:text-[3rem] md:text-[2.5rem] text-[2rem] font-light lg:tracking-[4px] md:tracking-[3px] tracking-[2px] text-[var(--theme-text,#000000)] lg:leading-[3.2rem] md:leading-[2.8rem] leading-[2.2rem]">
    {title}
  </h2>
  <h3 class="lg:text-2xl md:text-xl text-base font-normal tracking-[2px] uppercase text-[var(--theme-text-secondary,#666666)]">
    {subtitle}
  </h3>
</div>
