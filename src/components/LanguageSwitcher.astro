---
import { getLocale, switchLocalePath } from 'i18n:astro'

const currentLocale = getLocale()

// 生成語系連結
const zhLink = switchLocalePath('zh-TW')
const enLink = switchLocalePath('en')
---

<div class="language-switcher flex items-center text-lg font-medium tracking-wide">
  <a
    href={zhLink}
    class="transition-colors duration-200"
    style={currentLocale === 'zh-TW' ? 'color: var(--color-primary-500)' : 'color: var(--theme-text)'}
  >
    繁中
  </a>
  <span class="mx-1" style="color: var(--theme-text)">/</span>
  <a
    href={enLink}
    class="transition-colors duration-200"
    style={currentLocale === 'en' ? 'color: var(--color-primary-500)' : 'color: var(--theme-text)'}
  >
    En
  </a>
</div>
