---
export interface Props {
  size?: string | number
  class?: string
}

const {
  size = '40',
  class: className = '',
} = Astro.props
---

<svg
  aria-label="X"
  role="img"
  viewBox="0 0 24 24"
  fill="currentColor"
  class={`theme-icon ${className}`}
>
  <title>X</title>
  <path d="M18.244 2H22l-7.89 9.45L22.5 22h-6.6l-4.77-6.19L6.02 22H2l8.51-9.86L2.5 2h6.6l4.58 6.06L18.244 2z" />
</svg>

<style>
  .theme-icon {
    width: 18px;
    height: 18px;
    margin: 0;
    padding: 0;
    color: var(--theme-text, #000000);
    transition: color 0.3s ease;
  }

  .dark .theme-icon,
  .dark-theme .theme-icon,
  [data-theme="dark"] .theme-icon {
    color: var(--theme-text, #ffffff);
  }

  .theme-icon:hover {
    opacity: 0.7;
    transform: scale(1.05);
    transition: all 0.2s ease;
  }
</style>
