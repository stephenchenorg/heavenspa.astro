---
export interface Props {
  class?: string
}

const {
  class: className = '',
} = Astro.props
---

<svg
  class={`theme-icon ${className}`}
  xmlns="http://www.w3.org/2000/svg"
  aria-label="Telegram"
  role="img"
  viewBox="0 0 512 512"
  fill="currentColor"
  width="48"
  height="48"
>
  <path d="M256 0C114.6 0 0 114.6 0 256s114.6 256 256 256 256-114.6 256-256S397.4 0 256 0zm115.2 171.2l-29.4 138.6c-2.2 9.8-7.9 12.2-16.1 7.6l-44.5-32.8-21.5 20.6c-2.4 2.4-4.4 4.4-9 4.4l3.2-45.4 82.2-74.2c3.6-3.2-0.8-5-5.6-1.8l-101.6 64-43.7-13.6c-9.5-3-9.7-9.5 2-14l170.6-65.8c7.9-3 14.8 1.9 12.2 14z"/>
</svg>

<style>
  .theme-icon {
    margin: 0;
    padding: 0;
    color: var(--theme-text, #000000);
    transition: color 0.3s ease;
  }

  .dark .theme-icon,
  .dark-theme .theme-icon,
  [data-theme="dark"] .theme-icon {
    color: var(--theme-text, #ffffff);
  }

  .theme-icon:hover {
    opacity: 0.7;
    transform: scale(1.05);
    transition: all 0.2s ease;
  }
</style>