---
import {gql, graphQLAPI} from '@/api'

// 定義 API 回應的類型
export interface TeamCover {
  desktop: string
  desktop_blur: string
  mobile: string
  mobile_blur: string
}

export interface TeamCategory {
  title: string
}

export interface TeamMember {
  title: string
  category: TeamCategory
  cover: TeamCover
}

export interface TeamsResponse {
  teams: {
    data: TeamMember[]
  }
}

// GraphQL 查詢與錯誤處理
let teamMembers: TeamMember[] = []

try {
  const teamsData: TeamsResponse = await graphQLAPI(gql`
    query MyQuery {
      teams(sort_by: "asc", sort_column: "sort") {
        data {
          cover {
            desktop
            desktop_blur
            mobile
            mobile_blur
          }
          title
          category {
            title
          }
        }
      }
    }
  `)

  teamMembers = teamsData.teams.data || []
} catch (error) {
  console.error('Failed to fetch team data:', error)
  // 如果 API 失敗，提供預設資料
  teamMembers = [
    {
      title: '專業團隊',
      category: {title: '服務專員'},
      cover: {
        desktop: '/images/default-team.jpg',
        desktop_blur: '/images/default-team-blur.jpg',
        mobile: '/images/default-team-mobile.jpg',
        mobile_blur: '/images/default-team-mobile-blur.jpg',
      },
    },
  ]
}
---

<section class="team-section" id="team" data-section="team">
  <div class="team-container">
    <div class="team-header">
      <h2 class="team-title">我們的團隊</h2>
      <p class="team-description">
        嚴選頂尖團隊，成為最懂你的那雙手
      </p>
    </div>

    <div class="team-grid">
      {teamMembers.map(member => (
        <div class="team-member">
          <div class="member-image">
            <picture>
              <source media="(max-width: 768px)" srcset={member.cover.mobile}/>
              <img
                src={member.cover.desktop}
                alt={member.title}
                loading="lazy"
                onload="this.style.filter='none'"
                style="filter: blur(10px); transition: filter 0.3s ease;"
              />
            </picture>
          </div>
          <div class="member-info">
            <h3 class="member-name">{member.title}</h3>
            <p class="member-title">{member.category.title}</p>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- 跑馬燈區塊 -->
  <div class="marquee-container">
    <div class="marquee-content">
      <span class="marquee-text">
        {teamMembers.map(member => (
          `${member.title} • `
        )).join('')}
        {teamMembers.map(member => (
          `${member.title} • `
        )).join('')}
      </span>
    </div>
  </div>
</section>

<style>
  .scroll-section {
    position: relative;
    min-height: 120vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .team-section {
    padding: 2rem 1rem 0 1rem;
    position: relative;
    z-index: 10;
    overflow: visible;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .team-container {
    width: 70vw;
    margin: 0 auto;
    padding: 0 2rem;
    text-align: center;
  }

  .team-header {
    margin-bottom: 1.5rem;
  }

  .team-title {
    font-size: 2.5rem;
    font-weight: 600;
    color: #2d3436;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .team-description {
    font-size: 0.9rem;
    color: #636e72;
    line-height: 1.6;
    max-width: 500px;
    margin: 0 auto;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.5rem;
    justify-items: center;
    margin: 0 auto 1rem auto;
    flex: 1;
    align-content: center;
  }

  .team-member {
    text-align: center;
    transition: transform 0.3s ease;
  }

  .team-member:hover {
    transform: translateY(-5px);
  }

  .member-image {
    width: 200px;
    height: 200px;
    margin: 0 auto 1rem;
    overflow: hidden;
    position: relative;
    border-radius: 8px;
    flex-shrink: 0;
  }

  .member-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(100%);
    transition: filter 0.3s ease, transform 0.3s ease;
  }

  .team-member:hover .member-image img {
    filter: grayscale(0%);
  }

  .member-info {
    text-align: center;
  }

  .member-name {
    font-size: 1rem;
    font-weight: 700;
    color: #2d3436;
    margin-bottom: 0.3rem;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .member-title {
    font-size: 0.85rem;
    color: #74b9ff;
    font-weight: 400;
  }

  /* 跑馬燈樣式 */
  .marquee-container {
    background: #F8F6F0;
    padding: 1rem 0;
    overflow: hidden;
    white-space: nowrap;
    position: relative;
    z-index: 100;
    margin-top: auto;
    flex-shrink: 0;
    width: 100%;
    clear: both;
  }

  .marquee-content {
    display: inline-block;
    animation: marquee 30s linear infinite;
  }

  .marquee-text {
    font-size: 1rem;
    font-weight: 500;
    color: #333;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  @keyframes marquee {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  /* 響應式設計 */
  @media (max-width: 1024px) {
    .team-container {
      width: 85vw;
    }

    .team-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .member-image {
      width: 250px;
      height: 250px;
    }
  }

  @media (max-width: 768px) {
    .scroll-section {
      height: auto;
      min-height: 100vh;
    }

    .team-section {
      padding: 2rem 1rem 0 1rem;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .team-container {
      width: 90vw;
      padding: 0 1rem;
    }

    .team-header {
      margin-bottom: 3rem;
    }

    .team-title {
      font-size: 2.5rem;
    }

    .team-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      justify-items: center;
    }

    .member-image {
      width: 300px;
      height: 300px;
    }

    .marquee-container {
      margin-top: 4rem;
      position: relative;
      z-index: 200;
      padding: 1.5rem 0;
    }

    .marquee-text {
      font-size: 1rem;
      letter-spacing: 1.5px;
      color: #333;
    }
  }

  @media (max-width: 480px) {
    .team-section {
      padding: 2rem 0;
    }

    .team-container {
      width: 95vw;
      padding: 0 1rem;
    }

    .team-header {
      margin-bottom: 2rem;
    }

    .team-title {
      font-size: 2rem;
    }

    .team-description {
      font-size: 1rem;
      padding: 0;
    }

    .team-grid {
      gap: 1rem;
    }

    .member-image {
      width: 250px;
      height: 250px;
    }

    .member-name {
      font-size: 1rem;
      letter-spacing: 1px;
    }

    .member-title {
      font-size: 0.9rem;
    }

    .marquee-container {
      margin-top: 3rem;
      padding: 1.5rem 0;
      position: relative;
      z-index: 300;
      background: #F8F6F0;
      border-top: 1px solid rgba(196, 149, 108, 0.2);
    }

    .marquee-text {
      font-size: 0.9rem;
      letter-spacing: 1px;
      color: #333;
    }
  }

  @media (max-width: 320px) {
    .team-container {
      padding: 0 0.5rem;
    }

    .team-title {
      font-size: 1.8rem;
    }

    .member-image {
      width: 220px;
      height: 220px;
    }

    .marquee-container {
      z-index: 400;
      position: relative;
      margin-top: 2rem;
    }

    .marquee-text {
      font-size: 0.9rem;
    }
  }
</style>
