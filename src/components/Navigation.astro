---
interface Props {
  currentPage?: string;
}

const { currentPage = '' } = Astro.props;

const navItems = [
  { href: '/', label: 'HOME', key: 'home' },
  { href: '/courses', label: 'COURSES', key: 'courses' },
  { href: '/about', label: 'ABOUT', key: 'about' },
  { href: '/contact', label: 'CONTACT', key: 'contact' }
];
---

<nav class="main-nav">
  <div class="nav-logo">
    <a href="/">
      <div class="logo-icon">HS</div>
    </a>
  </div>
  <div class="nav-menu">
    {navItems.map(item => (
      <a 
        href={item.href} 
        class={`nav-item ${currentPage === item.key ? 'active' : ''}`}
      >
        {item.label}
      </a>
    ))}
  </div>
  <div class="nav-contact">
    <button class="contact-btn">CONTACT</button>
  </div>
</nav>

<style>
  .main-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem 4rem;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    z-index: 1000;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .nav-logo .logo-icon {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #c48b6e, #d4a574);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    color: white;
    font-size: 1.2rem;
    transition: transform 0.3s ease;
  }

  .nav-logo .logo-icon:hover {
    transform: scale(1.1);
  }

  .nav-menu {
    display: flex;
    gap: 3rem;
  }

  .nav-item {
    color: #2d3436;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9rem;
    letter-spacing: 1px;
    transition: color 0.3s ease;
    position: relative;
  }

  .nav-item:hover,
  .nav-item.active {
    color: #c48b6e;
  }

  .nav-item.active::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    right: 0;
    height: 2px;
    background: #c48b6e;
  }

  .contact-btn {
    background: linear-gradient(135deg, #c48b6e, #d4a574);
    color: white;
    border: none;
    padding: 0.8rem 2rem;
    border-radius: 25px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    letter-spacing: 1px;
    font-size: 0.9rem;
  }

  .contact-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(196, 139, 110, 0.3);
  }

  /* 響應式設計 */
  @media (max-width: 768px) {
    .main-nav {
      padding: 1rem 2rem;
    }

    .nav-menu {
      display: none;
    }

    .contact-btn {
      padding: 0.6rem 1.5rem;
      font-size: 0.8rem;
    }
  }
</style>
