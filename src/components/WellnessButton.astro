---
// Wellness Button Component
import Button from '@/components/ui/Button.astro'
import { createNestedT } from '@/utils/i18n'
// Wellness Button Component

const t = await createNestedT()

export interface Props {
  href?: string
  onClick?: string
  variant?: 'primary' | 'secondary'
  size?: 'small' | 'medium' | 'large'
}

const { href = '#', onClick, variant = 'primary', size = 'large' } = Astro.props

---

<Button href={href} onclick={onClick} variant={variant} size={size}>
  {t('buttons.book-now')}
</Button>
