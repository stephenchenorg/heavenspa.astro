<script>
document.addEventListener('DOMContentLoaded', () => {
  // Apply theme-aware styling to intro section
  const introSection = document.getElementById('intro')

  function updateIntroTheme() {
    const isDark = document.body.classList.contains('dark-theme')

    if (introSection) {
      // Update section background and text colors
      introSection.style.background = `var(--theme-bg, ${isDark ? '#000000' : '#ffffff'})`
      introSection.style.color = `var(--theme-text, ${isDark ? '#ffffff' : '#000000'})`
    }
  }

  // Listen for theme change events
  document.addEventListener('themeChanged', () => {
    updateIntroTheme()
  })

  // Apply initial theme
  updateIntroTheme()
})
</script>
