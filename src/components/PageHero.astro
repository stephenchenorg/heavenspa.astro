---
interface Props {
  title: string;
  subtitle: string;
  children?: any;
}

const { title, subtitle } = Astro.props;
---

<section class="page-hero">
  <div class="hero-content">
    <h1 class="page-title">{title}</h1>
    <p class="page-subtitle">{subtitle}</p>
    
    <slot />
  </div>
  <div class="hero-decoration"></div>
</section>

<style>
  .page-hero {
    position: relative;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    overflow: hidden;
  }

  .hero-content {
    text-align: center;
    z-index: 2;
    color: white;
  }

  .page-title {
    font-size: 4rem;
    font-weight: 900;
    margin-bottom: 1rem;
    line-height: 1.2;
    letter-spacing: -0.02em;
    animation: fadeInUp 1s ease 0.3s both;
  }

  .page-subtitle {
    font-size: 1.5rem;
    font-weight: 300;
    letter-spacing: 3px;
    text-transform: uppercase;
    opacity: 0.9;
    margin-bottom: 3rem;
    animation: fadeInUp 1s ease 0.5s both;
  }

  .hero-decoration {
    position: absolute;
    top: -50%;
    right: -20%;
    width: 800px;
    height: 800px;
    border-radius: 50%;
    background: linear-gradient(45deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
    animation: float 8s ease-in-out infinite;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(60px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-30px) rotate(10deg);
    }
  }

  /* 響應式設計 */
  @media (max-width: 768px) {
    .page-title {
      font-size: 2.5rem;
    }

    .page-subtitle {
      font-size: 1rem;
    }

    .hero-decoration {
      width: 400px;
      height: 400px;
      top: -25%;
      right: -30%;
    }
  }
</style>
